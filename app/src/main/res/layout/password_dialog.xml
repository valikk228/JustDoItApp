<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:screenOrientation="portrait"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="327dp"
            android:layout_height="305dp"
            android:layout_gravity="center"
            android:background="#363636">


            <TextView
                android:id="@+id/textView39"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/lato_medium_italic"
                android:text="Введіть новий пароль"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/oldPass" />

            <TextView
                android:id="@+id/textView37"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/lato_medium_italic"
                android:text="Введіть поточний пароль"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView15" />

            <EditText
                android:id="@+id/oldPass"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:background="@animator/textarea"
                android:ems="10"
                android:fontFamily="@font/lato_semi_bold_italic"
                android:hint="********"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/gray"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView37" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/lato_black"
                android:gravity="center_vertical"
                android:text="Змінити пароль"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/newPass"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:background="@animator/textarea"
                android:ems="10"
                android:fontFamily="@font/lato_semi_bold_italic"
                android:hint="********"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/gray"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView39" />

            <Button
                android:id="@+id/editPassword"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@animator/mybutton1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Змінити пароль"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/back_pass"
                app:layout_constraintTop_toBottomOf="@+id/newPass" />

            <Button
                android:id="@+id/back_pass"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@animator/mybutton3"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Назад"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newPass" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>